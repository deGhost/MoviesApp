<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:background="@color/light_grey"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    android:outlineAmbientShadowColor="@color/deeper_grey"
    android:outlineSpotShadowColor="@color/deeper_grey"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    >

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/ivMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivMovie"
            android:fontFamily="@font/poppins_medium"
            android:text="Movie Title"
            android:textAlignment="center"
            android:textColor="@color/deep_grey"
            android:textSize="16sp"
            android:paddingRight="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivMovie"
            android:fontFamily="serif-monospace"
            android:text="2021"
            android:textAlignment="center"
            android:textColor="@color/dramatic_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBrief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/ivMovie"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLength="40"
            android:maxLines="1"
            android:padding="12dp"
            android:text="This is a  biref oveview of the movie displayed"
            android:textSize="12sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>